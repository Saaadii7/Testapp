
<h1>Post</h1>

<table>
  <thead>
    <tr>
      <th>Post ID</th>
      <th>User ID</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
    <% @posts.each do |post| %>
      
      <tr>
      <td><%= post.id %></td>
        <td><%= post.user_id %></td>
        <td><%= post.content %></td>
        
        <td><%= link_to 'Edit' , edit_user_micro_post_path(@user,post.id)%></td>
        <td><%= link_to "Delete", user_micro_post_path(:id => post.id) , method: 'delete',  data: { confirm: 'Are you sure?' }%></td>  
          
      </tr>
    <% end %>
  </tbody>
 
</table>

<br>

<%= link_to 'New Post' , new_user_micro_post_path(@user) %>
<%= link_to 'Back' , users_path %>
